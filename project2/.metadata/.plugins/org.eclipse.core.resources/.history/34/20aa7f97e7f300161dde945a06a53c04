void serial_task(os_task_param_t task_init_data)
{
	typedef struct {
	MESSAGE_HEADER_STRUCT HEADER;
	uchar DATA[5];
	} SERVER_MESSAGE, * SERVER_MESSAGE_PTR;

	SERVER_MESSAGE_PTR msg_ptr;
	_queue_id          handler_qid;
	_pool_id   message_pool;

	handler_qid  = _msgq_open((_queue_number) 4, 0);//(_queue_number)(CLIENT_QUEUE_BASE +
	     // index), 0);

	if (handler_qid == 0) {
	  printf("\nCould not open a client message queue\n");
	  _task_block();
	}

	/* create a message pool */
   message_pool = _msgpool_create(sizeof(SERVER_MESSAGE),
	  NUM_CLIENTS, 0, 0);

   if (message_pool == MSGPOOL_NULL_POOL_ID) {
	  printf("\nCould not create a message pool\n");
	  _task_block();
   }


  /* Write your local variable definition here */
  int x = printf("serialTask Created!\r\n\r\n");
  
  char txBuf[13]; // replace with a struct! :P
